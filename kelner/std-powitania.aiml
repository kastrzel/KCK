<?xml version="1.0" encoding="utf-8"?>
<aiml version="2.0">
    <meta name="author" content="Yagira"/>
    <meta name="language" content="pl"/>
    <category>
        <pattern>DZIEN DOBRY</pattern>
        <template>
            <condition name = "hello" value = "n">
                <random>
                <li>Witam! W czym mogę pomóc?</li>
                <li>Dzień dobry, w czym mogę pomóc?</li>
                </random>
            </condition>
            <condition name = "hello" value = "y">
                Już się witaliśmy.
            </condition>
            <think><set name="hello">y</set></think>
        </template>
    </category>
    <category>
        <pattern>WITAM</pattern>
        <template>
            <srai>DZIEN DOBRY</srai>
        </template>
    </category>
    <category>
        <pattern>
            <set>test</set>
        </pattern>
        <template>
            <random>
                <li>Nie jesteśmy kolegami.</li>
                <li>Mało odpowiednie powitanie.</li>
            </random>
        </template>
    </category>
    <category>
        <pattern>_ 
            <set>test</set>
        </pattern>
        <template>
            <srai>
                <star index="2"/>
            </srai>
        </template>
    </category>
    <category>
        <pattern>
            <set>test</set> *
        </pattern>
        <template>
            <srai>
                <star index="1"/>
            </srai>
        </template>
    </category>
</aiml>