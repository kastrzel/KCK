<?xml version="1.0" encoding="utf-8"?>
<aiml version="2.0">
    <meta name="author" content="Yagira"/>
    <meta name="language" content="pl"/>

    <category>
    <pattern>_ WSZYSTKO</pattern>
    <template><srai>NIE</srai></template>
    </category>

    <category>
    <pattern>WSZYSTKO *</pattern>
    <template><srai>NIE</srai></template>
    </category>

    <category>
    <pattern>_ WSZYSTKO *</pattern>
    <template><srai>NIE</srai></template>
    </category>

    <category>
    <pattern>NIE *</pattern>
    <template><srai>NIE</srai></template>
    </category>

    <category>
        <pattern>NIE</pattern><that>* COŚ JESZCZE</that>
        <template>
            <condition name = "napoj" value = "no">
                Podać coś do picia?<think><set name ="danie">napoj</set></think>
            </condition>
            <condition name = "napoj" value = "yes">
                <think><set name="rachunek">yes</set></think><srai>RACHUNEK</srai>
            </condition>
        </template>
    </category>

    <category>
    <pattern>NIE</pattern><that>COŚ DO PICIA</that>
    <template><think><set name = "napoj">yes</set><set name="rachunek">yes</set></think><srai>RACHUNEK</srai></template>
    </category>

    
    <category>
        <pattern>NIE</pattern>
        <template>
            <srai>RACHUNEK</srai>
        </template>
    </category>

    <category>
        <pattern>*</pattern><that>PODAĆ COŚ DO PICIA</that>
        <template>
                <srai>PICIE <star index="1"/></srai>
        </template>
    </category>

    <category>
        <pattern>_ NIECH BEDZIE *</pattern>
        <template>
                <srai>POPROSZE <star index="2"/></srai>
        </template>
    </category>

    <category>
        <pattern>NIECH BEDZIE *</pattern>
        <template>
                <srai>POPROSZE <star index="1"/></srai>
        </template>
    </category>

    <category>
        <pattern>_ POPROSZE</pattern>
        <template>
                <srai>POPROSZE <star index="1"/></srai>
        </template>
    </category>

    <category>
        <pattern>_ POPROSZE *</pattern>
        <template>
                <srai>POPROSZE <star index="2"/></srai>
        </template>
    </category>
    
    <category>
        <pattern>POPROSZE *</pattern>
        <template>
            <think><set name="glowne"><star index="1"/></set></think>
            <condition name = "glowne">
                <li value="schabowy"><set name="order">Schabowy z frytkami i buraczkami</set>, coś jeszcze?<think><set name="cena">17</set></think></li>
                <li value="piers z kurczaka"><set name="order">Piers z kurczaka z ryżem i surówka</set>, coś jeszcze?<think><set name="cena">18</set></think></li>
                <li value="golabki"><set name="order">Goląbki z ziemniakami</set>, coś jeszcze?<think><set name="cena">13</set></think></li>
                <li value="kopytka"><set name="order">Kopytka z kapustą kiszoną</set>, coś jeszcze?<think><set name="cena">12</set></think></li>
                <li value="klopsy"><set name="order">Klopsy w sosie pomidorowym z ryżem</set>, coś jeszcze?<think><set name="cena">15</set></think></li>

                <li value="pomidorowa"><set name="order">Pomidorowa z ryżem</set>, coś jeszcze?<think><set name="cena">8</set></think></li>
                <li value="ogorkowa"><set name="order">Ogórkowa z ziemniakami</set>, coś jeszcze?<think><set name="cena">8</set></think></li>
                <li value="cebulowa"><set name="order">Zupa cebulowa</set>, coś jeszcze?<think><set name="cena">8</set></think></li>
                <li value="rosol"><set name="order">Rosół z makaronem</set>, coś jeszcze?<think><set name="cena">8</set></think></li>
			    <li value="barszcz"><set name="order">Barszcz czerwony z pasztecikiem</set>, coś jeszcze?<think><set name="cena">8</set></think></li>

                <li value="sok jablkowy"><set name="order">Sok jabłkowy</set>, coś jeszcze?<think><set name="cena">5</set><set name="napoj">yes</set></think></li>
                <li value="sok pomaranczowy"><set name="order">Sok pomarańczowy</set>, coś jeszcze?<think><set name="cena">5</set><set name="napoj">yes</set></think></li>
                <li value="pepsi"><set name="order">Pepsi</set>, coś jeszcze?<think><set name="cena">6</set><set name="napoj">yes</set></think></li>
                <li value="woda mineralna"><set name="order">Woda mineralna</set>, coś jeszcze?<think><set name="cena">4</set><set name="napoj">yes</set></think></li>
			    <li value="fanta"><set name="order">Fanta</set>, coś jeszcze?<think><set name="cena">6</set><set name="napoj">yes</set></think></li>
                <li>Nie mamy takiej pozycji w menu.</li>
            </condition>
        </template>
    </category>

    <category>
        <pattern>MOZE BYC</pattern>
        <template>
                <srai>POPROSZE</srai>
        </template>
    </category>

    <category>
        <pattern>NIECH BEDZIE</pattern>
        <template>
                <srai>POPROSZE</srai>
        </template>
    </category>

    <category>
        <pattern>POPROSZE</pattern>
        <template>
        <condition name = "danie" value = "">
                O co?
        </condition>
        <condition name = "danie" value = "zupa">
                <srai>ZUPA <get name="zupa"/></srai>
                <set name="danie"/>
        </condition>
        <condition name = "danie" value = "glowne">
                <srai>DANIE GLOWNE <get name="glowne"/></srai>
                <set name="danie"/>
        </condition>
        </template>
    </category>

    <category>
    <pattern>POLECDANIE</pattern>
    <template>
    <random>
    <li><srai>POLECZUPE</srai></li>
    <li><srai>POLECDANIEGLOWNE</srai></li>
    </random>
    </template>
    </category>

    <category>
    <pattern>_ POLECA</pattern>
    <template><srai>POLECDANIE</srai></template>
    </category>

    <category>
    <pattern>_ POLECI</pattern>
    <template><srai>POLECDANIE</srai></template>
    </category>

    <category>
    <pattern>_ POLECIC</pattern>
    <template><srai>POLECDANIE</srai></template>
    </category>
</aiml>