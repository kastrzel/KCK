<?xml version="1.0" encoding="utf-8"?>
<aiml version="2.0">
    <meta name="author" content="Strzelecki"/>
    <meta name="language" content="pl"/>

    <category>
        <pattern>_ DESER *</pattern>
        <template><srai>DESER<star index="2"/></srai></template>
    </category>
	<category>
        <pattern>_ DESER</pattern>
        <template><srai>DESER</srai></template>
    </category>
	<category>
        <pattern> DESER *</pattern>
        <template><srai>DESER</srai></template>
    </category>

    <category>
        <pattern>DESER</pattern>
        <template>
            <condition name = "plec" value = "m">
				Jaki deser Pan sobie życzy?
            </condition>
            <condition name = "plec" value = "k">
				Jaki deser Pani sobie życzy?
            </condition>
        </template>
    </category>

	<category>
        <pattern>DESER *</pattern>
        <template>
            <think><set name="deser"><star index="1"/></set></think>
            <condition name = "deser">
                <li value="tiramisu"><set name="order">Tiramisu</set>, coś jeszcze?<think><set name="cena">11</set></think></li>
                <li value="lody"><set name="order">Deser lodowy z owocami</set>, coś jeszcze?<think><set name="cena">10</set></think></li>
                <li value="szarlotka"><set name="order">Szarlotka na ciepło z bitą śmietaną</set>, coś jeszcze?<think><set name="cena">12</set></think></li>
                <li value="sorbet"><set name="order">Sorbet truskawkowy</set>, coś jeszcze?<think><set name="cena">8</set></think></li>
                <li value="gofry"><set name="order">Gofry z owocami i polewą</set>, coś jeszcze?<think><set name="cena">9</set></think></li>
            </condition>
        </template>
    </category>
	
	

    <category>
        <pattern>POLECDESER</pattern>
        <template>
            <random>
            <li>Polecam sernik.<think><set name="deser">sernik</set><set name="danie">deser</set></think></li>
            <li>Polecam lody.<think><set name="deser">lody</set><set name="danie">deser</set></think></li>
            <li>Polecam ciasteczka.<think><set name="deser">ciasteczka</set><set name="danie">deser</set></think></li>
            <li>Polecam szarlotkę.<think><set name="deser">szarlotka</set><set name="danie">deser</set></think></li>
            </random>
        </template>
    </category>

    
	<category>
    <pattern>_ POLECIC</pattern><that>JAKI DESER * SOBIE ŻYCZY</that>
    <template><srai>POLECDESER</srai></template>
    </category>
	
	<!-- warianty polecania	-->
