<?xml version="1.0" encoding="utf-8"?>
<aiml version="2.0">
    <meta name="author" content="Yagira"/>
    <meta name="language" content="pl"/>


    <category>
        <pattern>_ ZUPE</pattern>
        <template><srai>ZUPA</srai></template>
    </category>
	<category>
        <pattern>ZUPE *</pattern>
        <template><srai>ZUPA</srai></template>
    </category>
    <category>
        <pattern>_ ZUPE *</pattern>
        <template><srai>ZUPA <star index="2"/></srai></template>
    </category>

    <category>
        <pattern>ZUPA</pattern>
        <template>
            <condition name = "plec" value = "m">
                Na jaką zupę ma Pan ochotę?
            </condition>
            <condition name = "plec" value = "k">
                Na jaką zupę ma Pani ochotę?
            </condition>
        </template>
    </category>

    <category>
        <pattern>ZUPA *</pattern>
        <template>
            <think><set name="zupa"><star index="1"/></set></think>
            <condition name = "zupa">
               <li value="pomidorowa"><set name="order">Zupa pomidorowa</set>, coś jeszcze?<think><set name="cena">8</set></think></li>
               <li value="ogorkowa"><set name="order">Zupa ogórkowa</set>, coś jeszcze?<think><set name="cena">8</set></think></li>
               <li value="cebulowa"><set name="order">Zupa cebulowa</set>, coś jeszcze?<think><set name="cena">8</set></think></li>
               <li value="rosol"><set name="order">Rosół</set>, coś jeszcze?<think><set name="cena">8</set></think></li>
			   <li value="barszcz"><set name="order">Barszcz</set>, coś jeszcze?<think><set name="cena">8</set></think></li>
            </condition>
        </template>
    </category>
	
	<category>
        <pattern>POPROSZE *</pattern>
        <template><srai>ZUPA <star index="1"/></srai></template>
    </category>

    <category>
        <pattern>*</pattern><that>NA JAKĄ ZUPĘ MA * OCHOTĘ</that>
        <template><srai>ZUPA <star index="1"/></srai></template>
    </category>

    <category>
        <pattern>POLECZUPE</pattern>
        <template>
            <random>
            <li>Pomidorową<think><set name="zupa">pomidorowa</set><set name="danie">zupa</set></think></li>
            <li>Ogórkową<think><set name="zupa">ogorkowa</set><set name="danie">zupa</set></think></li>
            <li>Cebulową<think><set name="zupa">cebulowa</set><set name="danie">zupa</set></think></li>
            <li>Rosół<think><set name="zupa">rosoł</set><set name="danie">zupa</set></think></li>
			<li>Barszcz<think><set name="zupa">barszcz</set><set name="danie">zupa</set></think></li>
            </random>
        </template>
    </category>

    
    <category>
    <pattern>_ POLECA</pattern><that>NA JAKĄ ZUPĘ MA * OCHOTĘ</that>
    <template><srai>POLECZUPE</srai></template>
    </category>

    <category>
    <pattern>_ POLECI</pattern><that>NA JAKĄ ZUPĘ MA * OCHOTĘ</that>
    <template><srai>POLECZUPE</srai></template>
    </category>

    <category>
    <pattern>_ POLECIC</pattern><that>NA JAKĄ ZUPĘ MA * OCHOTĘ</that>
    <template><srai>POLECZUPE</srai></template>
    </category>
</aiml>