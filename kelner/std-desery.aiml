        <template>
            <random>
            <li>Tiramisu<think><set name="deser">tiramisu</set><set name="danie">deser</set></think></li>
            <li>Deser lodowy z owocami<think><set name="deser">deser lodowy</set><set name="danie">deser</set></think></li>
